#PBS -q debug
#PBS -l mppwidth=6144
#PBS -l walltime=00:15:00
#PBS -N pbbs
#PBS -j oe
#PBS -V

cd $PBS_O_WORKDIR

setenv GASNET_MAX_SEGSIZE '256MB'

set ITER=6
set UPC_TASK=4096
set EXE="./lulesh2.0-upcxx"
set LOGDIR="/global/homes/v/vivekk/logs"
set BENCH_OPTIONS="-s 30 -p -i 50"

set LOGFILE="${LOGDIR}/lulesh.3096.1024.Default.cores-${UPC_TASK}.log"
rm ${LOGFILE}
set j=0
while ( $j < ${ITER} )
  aprun -n ${UPC_TASK} -N 16  -S 8 ${EXE} ${BENCH_OPTIONS} >>& ${LOGFILE}
  set j=`expr ${j} + 1`
end
cat $LOGFILE | sed '/resources: utime/d' > "${LOGDIR}.t"
mv "${LOGDIR}.t" $LOGFILE
